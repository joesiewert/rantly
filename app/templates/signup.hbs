<form {{action 'createUser' on='submit'}} class='signup-form'>
  <div class='form-group'>
    {{input placeholder='Username' value=username}}
  </div>
  <div class='form-group'>
    {{input placeholder='Name' value=name}}
  </div>
  <div class='form-group'>
    {{input placeholder='Email' value=email}}
  </div>
  <div class='form-group'>
    {{input placeholder='Password' value=password type='password'}}
    <label class='input-icon fui-lock'></label>
  </div>
  <button type='submit' class='button button-block button-primary'>Sign Up</button>
</form>
